<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_activity_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/activity_icon_checked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_level_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Break your worry chain reaction"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@color/black_shade1"
        app:layout_constraintStart_toStartOf="@id/iv_activity_icon"
        app:layout_constraintEnd_toEndOf="@id/iv_activity_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_activity_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>